<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllCategories"
    android:background="@color/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <!-- 상단버튼 영역 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/back_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/arrow_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="products"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textAllCaps="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="15dp"/>


        </RelativeLayout>

        <!--  첫번째 상품 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!-- 첫번째 상품 배경 글자 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/pro_round">

                <!--            첫번째 상품 배경글자-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_bold"
                    android:padding="10dp"
                    android:text="Apple Ipad"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:text="view all"
                    android:textColor="@color/purple_200" />

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/pro_img_01" />

        </RelativeLayout>

        <!-- 두번째 상품 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/pro_round"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/pro_img_02"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/raleway_bold"
                android:padding="10dp"
                android:text="Apple AirPods"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="view all"
                android:textColor="@color/purple_200"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>

        <!--  세번째 상품 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <!-- 세번째 상품 배경 글자 -->
            <RelativeLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pro_round">

                <!--            첫번째 상품 배경글자-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apple Ipad"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/raleway_bold"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:text="view all"
                    android:textColor="@color/purple_200" />

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:src="@drawable/pro_img_03" />

        </RelativeLayout>

        <!-- 네번째 상품 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/pro_round"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/pro_img_04" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple MacBook"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="view all"
                android:textColor="@color/purple_200"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>

        <!--  다섯번째 상품 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <!-- 다섯번째 상품 배경 글자 -->
            <RelativeLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pro_round">

                <!--            첫번째 상품 배경글자-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apple Ipad"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/raleway_bold"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:text="view all"
                    android:textColor="@color/purple_200" />

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/pro_img_05" />

        </RelativeLayout>

        <!-- 여섯번째 상품 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/pro_round"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/pro_img_06"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple Etc"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="view all"
                android:textColor="@color/purple_200"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>


    </LinearLayout>

</ScrollView>